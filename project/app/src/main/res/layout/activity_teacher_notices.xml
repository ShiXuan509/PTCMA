<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colour"
    tools:context=".TeacherNotices">

    <TextView
        android:id="@+id/notices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Notices"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/teacherName2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notices"
        android:layout_centerInParent="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Enter Teacher Name"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtDate2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacherName2"
        android:layout_centerInParent="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Enter Today's Date"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txtNotices"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDate2"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Text"
        android:textSize="20dp" />

    <Button
        android:id="@+id/sendNotices"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNotices"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:text="Send" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/purple_500"
        app:itemIconTint="@drawable/serlector"
        app:itemTextColor="@drawable/serlector"
        app:menu="@menu/menu" />

</RelativeLayout>